.image-container {
  width: 100vw;
  height: 100vh;
  background-color: #f8f8f8;
  position: relative;
  box-sizing: border-box;
  padding: 36rpx;
}

.image-big-box {
  width: 100%;
}
.title-1 {
  margin-top: 60rpx;
}
.desc {
  opacity: 0.5;
  font: 26rpx sans-serif;
  margin-left: 10rpx;
}

.image-box {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 30rpx;
}

.image {
  width: 150rpx;
  height: 210rpx;
  margin: 0 20rpx;
  margin-top: 30rpx;
  border: pink dashed 1rpx;
}

.image-detail-box {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.8);
}
.image-detail {
  position: relative;
  border: #fff dashed 1rpx;
  width: 500rpx;
  height: 500rpx;
}
.image-detail .close {
  position: absolute;
  right: -60rpx;
  top: -60rpx;
  width: 60rpx;
  height: 60rpx;
}
.image-detail .img {
  width: 500rpx;
  height: 500rpx;
}
